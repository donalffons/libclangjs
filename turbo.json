{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "dependsOn": [
        "build"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}